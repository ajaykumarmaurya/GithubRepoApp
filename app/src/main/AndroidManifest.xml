<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.githubrepolist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.android.githubrepolist.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.android.githubrepolist.DetailActivity"
            android:screenOrientation="portrait"

            android:label="Detail">
        </activity>

        <activity
            android:name="com.example.android.githubrepolist.OwnerActivity"
            android:screenOrientation="portrait"

            android:label="Saved Repos">
        </activity>

        <activity
            android:name="com.example.android.githubrepolist.RepoActivity"
            android:screenOrientation="portrait"

            android:label="Saved Repos">
        </activity>





    </application>

</manifest>